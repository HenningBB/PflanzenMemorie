<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/QuizDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/quizDateLabel"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_QuizDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/QuizDateLabel"
        app:layout_constraintStart_toEndOf="@+id/QuizDateLabel"
        app:layout_constraintTop_toTopOf="@+id/QuizDateLabel" />

    <TextView
        android:id="@+id/QuizFehlerQuoteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/quizFehlerQuoteLabel"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/QuizDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/QuizDateLabel" />

    <TextView
        android:id="@+id/txt_QuizFehlerQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/QuizFehlerQuoteLabel"
        app:layout_constraintStart_toEndOf="@+id/QuizFehlerQuoteLabel"
        app:layout_constraintTop_toTopOf="@+id/QuizFehlerQuoteLabel" />

    <TextView
        android:id="@+id/QuizTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/quizTimeLabel"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/QuizFehlerQuoteLabel"
        app:layout_constraintTop_toBottomOf="@+id/QuizFehlerQuoteLabel" />

    <TextView
        android:id="@+id/txt_QuizTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/QuizTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/QuizTimeLabel"
        app:layout_constraintTop_toTopOf="@+id/QuizTimeLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>