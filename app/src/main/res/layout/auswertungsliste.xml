<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_kategorieAuswertung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_antwortAuswertungLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/auswertungAntwort"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_kategorieAuswertung"
        app:layout_constraintStart_toEndOf="@+id/txt_kategorieAuswertung"
        app:layout_constraintTop_toTopOf="@+id/txt_kategorieAuswertung" />

    <TextView
        android:id="@+id/txt_antwortAuswertung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_antwortAuswertungLabel"
        app:layout_constraintStart_toEndOf="@+id/txt_antwortAuswertungLabel"
        app:layout_constraintTop_toTopOf="@+id/txt_antwortAuswertungLabel" />

    <TextView
        android:id="@+id/txt_richtigeAntwortLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/auswertungLoesung"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_antwortAuswertung"
        app:layout_constraintStart_toEndOf="@+id/txt_antwortAuswertung"
        app:layout_constraintTop_toTopOf="@+id/txt_antwortAuswertung" />

    <TextView
        android:id="@+id/txt_richtigeAntwort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_richtigeAntwortLabel"
        app:layout_constraintStart_toEndOf="@+id/txt_richtigeAntwortLabel"
        app:layout_constraintTop_toTopOf="@+id/txt_richtigeAntwortLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>